        Else
    End If  
End Sub
</SCRIPT> 

<body> 
<TABLE width="300">
<TR>
<TD><center><input type="button" value="Capture C" name="no"  onClick="Capture_C" class="btn"> </TD>
<TD><center><input type="button" value="Capture D" name="no"  onClick="Capture_D" class="btn"> </TD>
<TD><center><input type="button" value="Capture E" name="no"  onClick="Capture_E" class="btn"> </TD>
