<html> 
<head> 
<title>Capture select</title>
<HTA:APPLICATION 
  APPLICATIONNAME=¡¨MainModal¡¨>
</head>

<SCRIPT Language="VBScript">
Sub Window_onLoad
        window.resizeTo 600,200
    End Sub 

Sub Capture_C 
 blnAnswer = window.confirm("Capture C:")
 Set objShell = CreateObject("Wscript.Shell")
    If blnAnswer Then
		CaptureFromDriveLetter="c:\"
		SaveCaptureToPath="c:\WIN81.wim"
        MsgBox "dism /Capture-Image /CaptureDir:" & CaptureFromDriveLetter & " /ImageFile:" & SaveCaptureToPath & " /Name:Windows"
		objShell.Run "dism /Capture-Image /CaptureDir:" & CaptureFromDriveLetter & " /ImageFile:" & SaveCaptureToPath & " /Name:Windows",1,true
        Else
    End If  
End Sub

