<SCRIPT Language="VBScript">
Sub Window_onLoad
        window.resizeTo 600,200
    End Sub 

Sub DIR_C 
 'blnAnswer = window.confirm("DIR C:")
 Set objShell = CreateObject("Wscript.Shell")
    'If blnAnswer Then
		'MsgBox "dir c:\"
        set cmd = objShell.Exec("cmd /k")        
		cmd.stdin.writeline("DIR.bat c:\")
		cmd.stdin.close                        'close stdin  [can't reopen!]
		objShell.popup cmd.stdout.readall                'get+show output
        'Else
    'End If  
End Sub

